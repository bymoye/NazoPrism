---
export interface Props {
  title: string;
  time: string;
  content: string;
  category: string;
  url: string;
  cover: string;
  id: number;
}

const { title, time, content, category, url, cover, id } = Astro.props;
---

<article class="post_list_thumb" data-article-id={id}>
  <div class="post_thumb">
    <a href={url} class="image_a" target="_blank" rel="noopener noreferrer">
      <img src={cover} alt={title} class="post_thumb_img" loading="lazy" />
    </a>
  </div>
  <div class="post_content_wrap">
    <div class="title">{title}</div>
    <div class="time">{time}</div>
    <div class="content">{content}</div>
    <div class="category">{category}</div>
    <div class="url">{url}</div>
  </div>
</article>

<script>
  import { initArticleAnimations } from "../scripts/article-animations";

  // 初始化
  initArticleAnimations();

  // 监听 Astro 页面加载事件
  document.addEventListener("astro:page-load", () => {
    initArticleAnimations();
  });
</script>

<style>
  /* Material Design 3 Card with Glassmorphism */
  .post_list_thumb {
    position: relative;
    display: flex;
    align-items: stretch;
    margin: 24px 0;
    border-radius: var(--md-sys-shape-corner-large);
    overflow: hidden;
    will-change: transform, opacity;
    transform: translateY(80px);
    opacity: 0;
    transition: all var(--md-sys-motion-duration-medium4)
      var(--md-sys-motion-easing-emphasized);

    /* Glassmorphism effect */
    background: rgba(
      var(--md-sys-color-surface-container),
      var(--glass-opacity, 0.7)
    );
    backdrop-filter: blur(var(--glass-blur, 16px));
    -webkit-backdrop-filter: blur(var(--glass-blur, 16px));
    border: 1px solid rgba(var(--md-sys-color-outline-variant), 0.12);
    box-shadow:
      0 1px 3px 0 rgba(0, 0, 0, 0.1),
      0 1px 2px 0 rgba(0, 0, 0, 0.06),
      inset 0 0 0 1px rgba(255, 255, 255, 0.05);
  }

  /* Hover state with elevation */
  .post_list_thumb:hover {
    transform: translateY(-4px);
    box-shadow:
      0 4px 8px 0 rgba(0, 0, 0, 0.12),
      0 2px 4px 0 rgba(0, 0, 0, 0.08),
      0 8px 16px 0 rgba(0, 0, 0, 0.06),
      inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    background: rgba(var(--md-sys-color-surface-container-high), 0.8);
  }

  /* Show state */
  .post_list_show {
    opacity: 1;
    transform: translateY(0);
    will-change: auto;
  }

  /* Image container */
  .post_thumb {
    position: relative;
    width: 55%;
    flex-shrink: 0;
  }

  .image_a {
    display: block;
    width: 100%;
    height: 320px;
    position: relative;
    overflow: hidden;
    background-color: var(--md-sys-color-surface-variant);
  }

  .post_thumb_img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all var(--md-sys-motion-duration-long2)
      var(--md-sys-motion-easing-emphasized);
    filter: saturate(0.8) brightness(0.95);
  }

  .post_list_thumb:hover .post_thumb_img {
    filter: saturate(1) brightness(1);
    transform: scale(1.05);
  }

  /* Content wrapper */
  .post_content_wrap {
    flex: 1;
    padding: 24px 32px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  /* Typography with Material Design 3 */
  .title {
    font-size: var(--md-sys-typescale-headline-medium);
    line-height: 1.29;
    font-weight: 400;
    color: var(--md-sys-color-on-surface);
    margin-bottom: 8px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .time {
    font-size: var(--md-sys-typescale-label-medium);
    line-height: 1.33;
    letter-spacing: 0.5px;
    color: var(--md-sys-color-on-surface-variant);
    margin-bottom: 12px;
    opacity: 0.8;
  }

  .content {
    font-size: var(--md-sys-typescale-body-large);
    line-height: 1.5;
    letter-spacing: 0.5px;
    color: var(--md-sys-color-on-surface-variant);
    margin-bottom: 16px;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .category {
    display: inline-flex;
    align-items: center;
    height: 32px;
    padding: 0 16px;
    font-size: var(--md-sys-typescale-label-small);
    font-weight: 500;
    letter-spacing: 0.5px;
    color: var(--md-sys-color-on-secondary-container);
    background: rgba(var(--md-sys-color-secondary-container), 0.3);
    border-radius: var(--md-sys-shape-corner-small);
    margin-bottom: 12px;
    width: fit-content;
  }

  .url {
    font-size: var(--md-sys-typescale-label-medium);
    color: var(--md-sys-color-primary);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 4px;
    transition: color var(--md-sys-motion-duration-short4)
      var(--md-sys-motion-easing-standard);
  }

  .url:hover {
    color: var(--md-sys-color-tertiary);
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .post_list_thumb {
      flex-direction: column;
      margin: 16px 0;
    }

    .post_thumb {
      width: 100%;
      height: 200px;
    }

    .image_a {
      height: 100%;
    }

    .post_content_wrap {
      padding: 20px;
    }

    .title {
      font-size: var(--md-sys-typescale-headline-small);
    }

    .content {
      -webkit-line-clamp: 2;
    }
  }

  /* Dark mode adjustments */
  @media (prefers-color-scheme: dark) {
    .post_list_thumb {
      background: rgba(var(--md-sys-color-surface-container), 0.6);
      border: 1px solid rgba(var(--md-sys-color-outline-variant), 0.2);
    }

    .post_list_thumb:hover {
      background: rgba(var(--md-sys-color-surface-container-high), 0.7);
    }

    .post_thumb_img {
      filter: saturate(0.7) brightness(0.9);
    }

    .post_list_thumb:hover .post_thumb_img {
      filter: saturate(0.9) brightness(1);
    }
  }

  /* Animation keyframes */
  @keyframes main {
    0% {
      opacity: 0;
      transform: translateY(80px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
