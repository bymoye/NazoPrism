---
// Custom scrollbar component
---

<div id="custom-scrollbar" class="custom-scrollbar">
  <div id="scroll-thumb" class="scroll-thumb"></div>
</div>

<script>
  import { initScrollbar } from "../scripts/scrollbar";

  // 初始化
  initScrollbar();

  // 监听 Astro 页面加载事件
  document.addEventListener("astro:page-load", () => {
    initScrollbar();
  });
</script>

<style>
  .custom-scrollbar {
    position: fixed;
    right: 0;
    top: 0;
    width: 8px;
    height: 100vh;
    background: rgba(0, 0, 0, 0.1);
    z-index: 9999;
    opacity: 0;
    transition: opacity 0.3s;
    pointer-events: auto;
  }

  .custom-scrollbar:hover {
    opacity: 1 !important;
  }

  .scroll-thumb {
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    background: rgba(0, 0, 0, 0.5);
    border-radius: 4px;
    cursor: pointer;
    transition:
      background 0.3s,
      transform 0.1s;
  }

  .scroll-thumb:hover {
    background: rgba(0, 0, 0, 0.7);
  }

  .scroll-thumb:active {
    background: rgba(0, 0, 0, 0.8);
  }

  /* 在移动设备上隐藏 */
  @media (max-width: 768px) {
    .custom-scrollbar {
      display: none;
    }
  }
</style>
